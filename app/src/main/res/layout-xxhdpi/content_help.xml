<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/helpBackButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_arrow_back" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/txtdasbord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halaman Bantuan untuk"
                android:fontFamily="@font/cabinsketchbold"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_below="@+id/txtdasbord"
                android:id="@+id/txtcenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingBottom="20dp"
                android:fontFamily="@font/cabinsketchregular"
                android:text="Pengguna"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/txtcenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:fontFamily="@font/cabinsketchregular"
                    android:text="Masalah Koneksi"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#487eb0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:fontFamily="@font/cabinsketchregular"
                    android:text="Jika anda tidak dapat terhubung ke online television, hal ini umumnya disebabkan oleh masalah koneksi jaringan internet atau setelan telepon anda."
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:fontFamily="@font/cabinsketchregular"
                    android:text="Penyelesaian Masalah"
                    android:textColor="#487eb0"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="8dp"
                    android:fontFamily="@font/cabinsketchregular"
                    android:text="Hampir semua masalah koneksi dapat diselesaikan dengan melakukan hal berikut:"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="8dp">
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_node"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/cabinsketchregular"
                        android:textSize="14sp"
                        android:text="Mulai ulang telepon, matikan lalu nyalakan kembali."
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="12dp">
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_node"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:fontFamily="@font/cabinsketchregular"
                        android:text="Perbarui aplikasi anda pada versi yang terbaru."
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="8dp">
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_node"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:fontFamily="@font/cabinsketchregular"
                        android:text="Buka Setelan telepon > ketuk Jaringan dan Internet > nyalakan Mode Pesawat lalu matikan kembali."
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="8dp">
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_node"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:fontFamily="@font/cabinsketchregular"
                        android:text="Buka Setelan telepon > ketuk Jaringan dan Internet > Wifi > matikan Wifi lalu nyalakan kembali."
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="8dp">
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_node"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:fontFamily="@font/cabinsketchregular"
                        android:text="Coba sambungkan ke jaringan Wifi yang lain."
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="8dp">
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_node"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:fontFamily="@font/cabinsketchregular"
                        android:text="Hubungi operator seluler anda dan pastikan APN telah terkonfigurasi dengan benar."
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="16dp">
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_node"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:fontFamily="@font/cabinsketchregular"
                        android:text="Tingkatkan OS Android ke Versi yang paling baru untuk telepon anda."
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/txtcenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:fontFamily="@font/cabinsketchregular"
                    android:text="Channel Tidak Menampilkan Siaran"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#487eb0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:fontFamily="@font/cabinsketchregular"
                    android:text="Jika channel tidak bisa menampilkan siaran, hal ini umumnya disebabkan oleh masalah koneksi ataupun juga channel pada aplikasi ini sudah tidak aktif sehingga tidak dapat menampilkan siaran."
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:fontFamily="@font/cabinsketchregular"
                    android:text="Penyelesaian Masalah"
                    android:textColor="#487eb0"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="8dp"
                    android:fontFamily="@font/cabinsketchregular"
                    android:text="Masalah channel tidak dapat menampilkan siaran dapat diselesaikan dengan melakukan hal berikut:"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="8dp">
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_node"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:fontFamily="@font/cabinsketchregular"
                        android:text="Untuk masalah koneksi anda dapat menyelesaikan masalah tersebut dengan cara yang ada di halaman ini."
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="16dp">
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_node"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:fontFamily="@font/cabinsketchregular"
                        android:text="Jika masih terjadi masalah channel tidak bisa menampilkan siaran hal ini disebabkan oleh channel yang sudah tidak aktif, untuk menyelesaikan hal ini anda dapat menghubungi pengembang dan berikan info channel mana yang terjadi masalah dan tidak aktif."
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:layout_gravity="center"
            android:layout_width="185dp"
            android:layout_height="45dp"
            android:onClick="hubPengembang"
            android:fontFamily="@font/cabinsketchregular"
            android:textColor="@android:color/white"
            android:text="Hubungi Pengembang"
            android:textSize="14dp"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</ScrollView>