<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#487eb0"
        android:padding="15dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="10dp">

        <ImageView
                android:id="@+id/imgScreen"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:paddingBottom="5dp"
                android:src="@drawable/icon" />

        <TextView
                android:id="@+id/tvScreen1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="@font/cabinsketchbold"
                android:textStyle="bold"
                android:text="Online Television"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/tvScreen2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:fontFamily="@font/cabinsketchregular"
                android:textStyle="bold"
                android:textSize="10sp"
                android:text="Ultra Studio Indonesia 2019"/>
    </LinearLayout>

</LinearLayout>