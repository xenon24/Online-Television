            <RelativeLayout
                    android:id="@+id/religi8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_columnWeight="1"
