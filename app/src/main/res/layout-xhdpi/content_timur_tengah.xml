                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:fontFamily="@font/cabinsketchregular"
                                android:text="streaming langsung"
                                android:textSize="14sp"
                                android:textStyle="bold"/>
                    </LinearLayout>
